<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.account</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
              <xpath expr="//div[@id='send_default']" position="after">
                    <h2>Account Closing</h2>
                     
                        <div class="row mt16 o_settings_container">                         
                            <div class="col-12 col-lg-6 o_setting_box">
                              <div class="col-12 o_setting_box">  
                              <div class="o_setting_left_pane">
                                <field name="module_account_cutoff_base" class="oe_inline" />
                              </div>
                              <div class="o_setting_right_pane">                                    
                                    <label for="module_account_cutoff_base"/> 
                                    <div class="text-muted">
                                         Install / Unistall Module 
                                    </div>                               
                              </div>                            
                            </div>
                            <div class="col-12 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="module_account_cutoff_prepaid" class="oe_inline" />
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_account_cutoff_prepaid" />
                                    <div class="text-muted">
                                         Install / Unistall Module 
                                    </div>                               
                                </div>
                            </div> 
                            
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                                <div class="col-12 o_setting_box">                           
                                <div class="o_setting_left_pane">
                                    <field name="module_account_invoice_start_end_dates" class="oe_inline" />
                                </div>
                               
                                <div class="o_setting_right_pane">                                    
                                    <label for="module_account_invoice_start_end_dates" />
                                    <div class="text-muted">
                                         Install / Unistall Module 
                                    </div>                               
                                </div> 
                                </div>                        
                                <div class="col-12 o_setting_box">    
                                <div class="o_setting_left_pane">
                                    <field name="module_account_multicurrency_revaluation" class="oe_inline" />
                                </div>                               
                                 <div class="o_setting_right_pane">                                    
                                    <label for="module_account_multicurrency_revaluation" />
                                    <div class="text-muted">
                                         Install / Unistall Module 
                                    </div>                               
                                </div> 
                                </div>                    
                                
                        </div>                           
                      </div>                                                  
                                      
                </xpath>
            </field>
        </record>
    </data>
</odoo>


                